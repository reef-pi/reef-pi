    "babel-loader": "8.1.0",
    "bootstrap": "4.5.0",
    "classnames": "2.2.6",
    "clean-webpack-plugin": "3.0.0",
    "create-react-class": "15.6.3",
    "cross-env": "7.0.2",
    "css-loader": "3.2.1",
    "csv-parse": "^4.10.1",
    "csv-stringify": "5.3.6",
    "electron": "^8.3.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "eslint": "6.7.2",
    "eslint-plugin-react": "7.17.0",
    "fetch-mock": "9.4.0",
    "formik": "2.1.4",
